<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KrutolapovPr12.ViewingPage"
             Title="Просмотр данных">
    <StackLayout Spacing="10" Padding="20" Orientation="Vertical">
        <StackLayout Orientation="Horizontal">
            <Label Text="ФИО: "/>
            <Label x:Name="lbFIO" Text="{StaticResource Key=chelik}"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Гендер: "/>
            <Label x:Name="lbGender"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Дата рождения: "/>
            <Label x:Name="lbYearOfBirth"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Место рождения: "/>
            <Label x:Name="lbPlaceOfBirth"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Национальность: "/>
            <Label x:Name="lbNationality"/>
        </StackLayout>
    </StackLayout>
</ContentPage>