<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KrutolapovPr12.AddPage"
             Title="AddPage" Disappearing="ContentPage_Disappearing">
    <StackLayout Padding="20" Spacing="10" >       
        <StackLayout Orientation="Horizontal">
            <Label Text="ФИО: " VerticalOptions="Center"/>
            <Entry x:Name="entryFIO"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Гендер: " VerticalOptions="Center"/>
            <Entry x:Name="entryGender"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Дата рождения: " VerticalOptions="Center"/>
            <Entry x:Name="entryYearOfBirth"/>
        </StackLayout>
         <StackLayout Orientation="Horizontal">
            <Label Text="Место рождения: " VerticalOptions="Center"/>
            <Entry x:Name="entryPlaceOfBirth"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Национальность: " VerticalOptions="Center"/>
             <Entry x:Name="entryNationality"/>            
        </StackLayout>        
    </StackLayout>
</ContentPage>