<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KrutolapovPr12.EditPage"
             Title="Изменение анкеты" Disappearing="ContentPage_Disappearing">
    <StackLayout Spacing="10" Padding="20" Orientation="Vertical">
        <StackLayout Orientation="Horizontal">
            <Label Text="ФИО: "  VerticalOptions="Center"/>
            <Entry x:Name="entryFIO" Text="{StaticResource Key=chelik}"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Гендер: " VerticalOptions="Center"/>
            <Entry x:Name="entryGender"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Дата рождения: "  VerticalOptions="Center"/>
            <Entry x:Name="entryYearOfBirth"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Место рождения: "  VerticalOptions="Center"/>
            <Entry x:Name="entryPlaceOfBirth"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Национальность: "  VerticalOptions="Center"/>
            <Entry x:Name="entryNationality"/>            
        </StackLayout>       
    </StackLayout>
</ContentPage>